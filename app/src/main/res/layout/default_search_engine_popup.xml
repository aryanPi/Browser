<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
   style="@style/matchWrap"
    android:layout_gravity="center"
    android:background="@color/transparent"
    android:padding="10dp">

    <LinearLayout
style="@style/matchWrap"
        android:background="@drawable/background_popup_custom"
        android:orientation="vertical"
        android:padding="5dp">

        <TextView
            style="@style/wrap"
            android:layout_margin="7dp"
            android:paddingVertical="6dp"
            android:gravity="center_horizontal"
            android:layout_gravity="center_horizontal"
            android:text="Select Default Search Engine"
            android:textColor="@color/white"
            android:textSize="17sp"
            android:textStyle="bold"
            />

        <View
            android:layout_width="match_parent"
            android:layout_marginHorizontal="10dp"
            android:layout_height="1dp"
            android:background="#75FFFFFF"
            android:layout_marginBottom="7dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <RadioGroup
                android:id="@+id/RadioBoxGroupDefault"
                android:layout_width="match_parent"
                android:paddingHorizontal="10dp"
                android:layout_height="wrap_content">

                <RadioButton
                    android:id="@+id/googleRadio"
                    style="@style/radio_default_searchengine"
                    android:text="Google"
                    />

                <RadioButton
                    android:id="@+id/yahooRadio"
                    style="@style/radio_default_searchengine"
                    android:text="Yahoo" />

                <RadioButton
                    android:id="@+id/AskRadio"
                    style="@style/radio_default_searchengine"
                    android:text="Ask" />

                <RadioButton
                    android:id="@+id/bingRadio"
                    style="@style/radio_default_searchengine"
                    android:text="Bing" />

                <RadioButton
                    android:id="@+id/DuckDuckGoRadio"
                    style="@style/radio_default_searchengine"
                    android:text="DuckDuckGo (Privacy)" />

                <RadioButton
                    android:id="@+id/YandexRadio"

                    style="@style/radio_default_searchengine"
                    android:text="Yandex (Russian)" />

                <RadioButton
                    android:id="@+id/aloRadio"
                    style="@style/radio_default_searchengine"
                    android:text="Alo" />

                <RadioButton
                    android:id="@+id/NaverRadio"
                    style="@style/radio_default_searchengine"
                    android:text="Naver" />

            </RadioGroup>
        </LinearLayout>

        <LinearLayout
            style="@style/wrap"
            android:layout_gravity="right"
            android:layout_margin="10dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/cancel_btn_defaultbrowser"
                style="@style/wrap"
                android:layout_marginHorizontal="10dp"
                android:text="CANCEL"
                android:textColor="#FFCC15"
                android:textSize="16sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/select_btn_defaultbrowser"
                style="@style/wrap"
                android:layout_marginHorizontal="10dp"
                android:text="SELECT"
                android:textColor="#FFCC15"
                android:textSize="16sp"
                android:textStyle="bold" />
        </LinearLayout>
    </LinearLayout>
</RelativeLayout>
<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="5dp"
    android:layout_marginVertical="2dp"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/tem"
        android:layout_width="match_parent"
        android:layout_height="40dp">

        <ImageView
            android:id="@+id/imageExpandIconRight"
            android:layout_width="15dp"
            android:layout_centerVertical="true"
            android:layout_height="15dp"
            android:layout_marginStart="5dp"
            android:src="@drawable/ic_right_arrow" />

        <ImageView
            android:id="@+id/folder"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_centerVertical="true"
            android:layout_marginHorizontal="10dp"
            android:layout_toEndOf="@+id/imageExpandIconRight"
            android:src="@drawable/folder_drawable" />


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toEndOf="@+id/folder"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/albumNameImages"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:textColor="@color/white"
                android:ellipsize="end"
                android:maxLines="1"
                android:layout_weight="1"
                android:singleLine="true"
                android:fontFamily="@font/proxima_nova_regular"
                android:text="this is the text which is going to be the name of tthis thing"
                android:textSize="17sp" />

            <TextView
                android:id="@+id/howManyItemInThis"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="10dp"
                android:fontFamily="@font/proxima_nova_regular"
                android:text="(5)"
                android:textColor="#B0FFFFFF"
                android:textSize="15sp" />
        </LinearLayout>
    </RelativeLayout>

    <FrameLayout
        android:id="@+id/frameLayoutInsideSingleAlbumLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginHorizontal="5dp"
        android:padding="5dp"
        android:background="@drawable/background_frame_layout_album_name"
android:visibility="gone"
        />

</LinearLayout>
<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/matchWrap"
    android:layout_gravity="center"
    android:background="@color/transparent"
    android:padding="10dp">

    <LinearLayout
style="@style/matchWrap"
        android:background="@drawable/background_popup_custom"
        android:orientation="vertical"
        android:padding="10dp"
        >

        <TextView
            android:id="@+id/headlineDeleteDialigeItem"
            style="@style/wrap"
            android:layout_margin="10dp"
            android:text="Are you sure you want to delete it?"
            android:textColor="@color/white"
            android:textSize="17sp"

            />


        <LinearLayout
            style="@style/wrap"
            android:layout_margin="10dp"
            android:layout_gravity="right"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/cancel_btn_delete"
                style="@style/wrap"
                android:layout_marginHorizontal="10dp"
                android:layout_toRightOf="@+id/delete_btn_delete"
                android:text="CANCEL"
                android:textColor="@color/white"
                android:textSize="15sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/delete_btn_delete"
                style="@style/wrap"
                android:layout_marginHorizontal="10dp"
                android:text="DELETE"
                android:textColor="#FF0000"
                android:textSize="15sp"
                android:textStyle="bold" />
        </LinearLayout>
    </LinearLayout>
</RelativeLayout>
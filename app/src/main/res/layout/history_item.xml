<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/transparent"
    android:padding="5dp"
    android:id="@+id/mainBodyItemHistory"
    >

    <CheckBox
        android:id="@+id/checkbokHistory"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:buttonTint="#9AFFCC15"
        android:visibility="gone"
        />

    <ImageView
        android:id="@+id/logoHistory"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_margin="5dp"
        android:layout_centerVertical="true"
        android:layout_toEndOf="@+id/checkbokHistory"
        android:backgroundTint="#8FFFFFFF"
        android:background="@drawable/web_drawable"
        />

    <TextView
        android:id="@+id/titleHistory"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="10dp"
        android:layout_toStartOf="@+id/menuItemHistory"
        android:layout_toEndOf="@+id/logoHistory"
        android:layout_toRightOf="@+id/logoHistory"
        android:lines="1"
        android:maxLines="1"
        android:text="title"
        android:textColor="@color/white"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/urlHistory"
        android:layout_width="wrap_content"
        android:layout_height="14dp"
        android:layout_below="@+id/titleHistory"
        android:layout_marginHorizontal="10dp"
        android:layout_toStartOf="@+id/menuItemHistory"
        android:layout_toEndOf="@+id/logoHistory"
        android:layout_toRightOf="@+id/logoHistory"
        android:text="url"
        android:textColor="#B2FFFFFF"
        android:textSize="10sp" />

    <ImageView
        android:id="@+id/menuItemHistory"
        android:layout_width="40dp"
        android:layout_height="50dp"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true"
        android:paddingHorizontal="12dp"
        android:src="@drawable/menuicon_top_drawable" />
</RelativeLayout>
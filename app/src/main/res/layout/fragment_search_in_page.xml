<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_gravity="end"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:gravity="center_vertical"
    android:background="@drawable/make_dark_background"
    tools:context=".fragment.SearchInPage">

    <EditText
        android:id="@+id/searchTextInPage"
        android:layout_width="150dp"
        android:layout_height="35dp"
        android:layout_margin="10dp"
        android:padding="5dp"
        android:maxLines="3"
        android:background="@drawable/rename_file__textview_bg"
        android:text=""
        android:textColorHint="@color/white"
        android:hint="Type..."
        android:textColor="@color/white"
        android:paddingHorizontal="10dp"
        android:textIsSelectable="true"
        android:textSize="16sp" />

    <ImageView
        android:id="@+id/downSearchPage"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:rotation="90"
        android:backgroundTint="@color/mainYelloColor"
        android:background="@drawable/ic_right_arrow"/>

    <ImageView
        android:id="@+id/upSearchInPage"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:rotation="270"
        android:layout_marginHorizontal="10dp"
        android:backgroundTint="@color/mainYelloColor"
        android:background="@drawable/ic_right_arrow"/>
    <ImageView
        android:id="@+id/closeSearchInPage"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:rotation="90"
        android:layout_marginEnd="10dp"
        android:backgroundTint="@color/mainYelloColor"
        android:background="@drawable/cancel_drawable"/>
</LinearLayout>
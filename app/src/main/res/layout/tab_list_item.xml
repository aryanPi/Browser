<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="10dp"
    android:background="@color/transparent"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/tabIconOfPage"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_alignParentStart="true"
        android:layout_marginStart="10dp"
        android:layout_centerVertical="true"
        android:background="@drawable/web_drawable"
         />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:layout_marginStart="10dp"
        android:layout_centerVertical="true"
        android:gravity="center_vertical"
        android:layout_toStartOf="@+id/close"
        android:layout_toEndOf="@+id/tabIconOfPage"
        android:orientation="vertical">

        <TextView
            android:id="@+id/titleOfPage"
            android:layout_width="wrap_content"
            android:layout_height="25dp"
            android:maxHeight="25dp"
            android:maxLines="1"
            android:text="Tab Name OR title of page"
            android:textColor="@color/black"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/urlOfSite"
            android:layout_width="wrap_content"
            android:layout_height="25dp"
            android:maxLines="1"

            android:maxHeight="25dp"
            android:textColor="@color/black"
            android:text="https://www.urlof the site.com/abcdefghi" />
    </LinearLayout>

    <ImageView
        android:layout_width="25dp"
        android:id="@+id/close"
        android:layout_centerVertical="true"
        android:layout_height="25dp"
        android:background="@drawable/circle_bg_new_tab_btn"
        android:layout_alignParentEnd="true"
        android:layout_marginLeft="10dp"
        android:padding="3dp"
        android:src="@drawable/close_drawable" />
</RelativeLayout>
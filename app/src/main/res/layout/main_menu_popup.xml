<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"

    android:layout_height="wrap_content">


    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="wrap_content"
        android:paddingHorizontal="5dp"
        android:paddingVertical="5dp"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/topItemsMainMenu"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:background="@drawable/main_menu_context_menu_top_bg"
            android:gravity="center"
            android:paddingHorizontal="5dp"
            android:paddingVertical="10dp">

            <ImageView
                android:id="@+id/backBtn"
                android:layout_width="22dp"
                android:layout_height="22dp"
                android:layout_weight="1"
                android:src="@drawable/ic_can_previous" />

            <ImageView
                android:id="@+id/farwardBtn"
                android:layout_width="22dp"
                android:layout_height="22dp"
                android:layout_weight="1"

                android:src="@drawable/ic_can_previous" />

            <ImageView
                android:id="@+id/bookmarkBtn"
                android:layout_width="22dp"
                android:layout_height="22dp"
                android:layout_weight="1"
                android:src="@drawable/bookmark_unselected_drawable" />

            <ImageView
                android:id="@+id/homeBtnMainMenu"
                android:layout_width="22dp"
                android:layout_height="22dp"
                android:layout_weight="1"
                android:src="@drawable/home_nav_drawable" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/downItemsMainMenu"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:elevation="30dp"
            android:background="@drawable/bg_main_menu"
            android:orientation="vertical">

            <TextView
                android:id="@+id/historyBtn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="10dp"
                android:layout_marginVertical="10dp"
                android:drawablePadding="10dp"
                android:text="@string/history"
                android:textColor="@color/white"
                android:textSize="16sp"
                app:drawableStartCompat="@drawable/history_drawable" />

            <LinearLayout
                android:id="@+id/incognitoTogglelayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="5dp"
                android:layout_marginVertical="10dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_weight="1"
                    android:drawablePadding="10dp"
                    android:text="@string/incognito"
                    android:textColor="@color/white"
                    android:textSize="16sp"
                    app:drawableStartCompat="@drawable/ic_incognito" />

                <androidx.appcompat.widget.SwitchCompat
                    android:id="@+id/incognitoToggle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginHorizontal="5dp"
                    android:checked="false"
                    android:theme="@style/SCBSwitch" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/darkModeTogglelayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="5dp"
                android:layout_marginVertical="10dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_weight="1"
                    android:drawablePadding="10dp"
                    android:text="@string/dark_theme"
                    android:textColor="@color/white"
                    android:textSize="16sp"
                    app:drawableStartCompat="@drawable/sun_drawable" />

                <androidx.appcompat.widget.SwitchCompat
                    android:id="@+id/darkModeToggle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginHorizontal="5dp"
                    android:checked="false"
                    android:theme="@style/SCBSwitch" />
            </LinearLayout>



            <LinearLayout
                android:id="@+id/desktopViewLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="5dp"
                android:layout_marginVertical="10dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:drawablePadding="10dp"
                    android:text="@string/desktop_view"
                    android:layout_weight="1"
                    android:textColor="@color/white"
                    android:textSize="16sp"
                    app:drawableStartCompat="@drawable/ic_computer" />

                <androidx.appcompat.widget.SwitchCompat
                    android:id="@+id/desktopViewToggle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="end"
                    android:layout_gravity="end"
                    android:layout_marginHorizontal="5dp"
                    android:checked="false"
                    android:theme="@style/SCBSwitch" />

            </LinearLayout>


            <TextView
                android:id="@+id/searInPageBtn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="10dp"
                android:layout_marginVertical="10dp"
                android:drawablePadding="10dp"
                android:text="@string/search_in_page"
                android:textColor="@color/white"
                android:textSize="16sp"
                app:drawableStartCompat="@drawable/search_drawable" />


            <TextView
                android:id="@+id/bookmarksBtnMainMenu"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="10dp"
                android:layout_marginVertical="10dp"
                android:drawablePadding="10dp"
                android:text="@string/bookmarks"
                android:textColor="@color/white"
                android:textSize="16sp"
                app:drawableStartCompat="@drawable/star_drawable" />

            <TextView
                android:id="@+id/copyUrlBtn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="10dp"
                android:layout_marginVertical="10dp"
                android:drawablePadding="10dp"
                android:text="@string/copy_link_url"
                android:textColor="@color/white"
                android:textSize="16sp"
                app:drawableStartCompat="@drawable/copy_drawable" />

            <TextView
                android:id="@+id/shareBtnMainMenu"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="10dp"
                android:layout_marginVertical="10dp"
                android:drawablePadding="10dp"
                android:text="@string/share_web_page"
                android:textColor="@color/white"
                android:textSize="16sp"
                app:drawableLeftCompat="@drawable/share_drawable" />

            <TextView
                android:id="@+id/exitBtn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="10dp"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="15dp"
                android:drawablePadding="10dp"
                android:text="@string/exit"
                android:textColor="@color/white"
                android:textSize="16sp"
                app:drawableLeftCompat="@drawable/exit_drawable" />
        </LinearLayout>
    </LinearLayout>

</RelativeLayout>
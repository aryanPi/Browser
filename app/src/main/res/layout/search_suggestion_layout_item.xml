<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:paddingVertical="10dp"
    >

    <ImageView
        android:id="@+id/getFromResultImage"
        android:layout_width="25dp"
        android:layout_centerVertical="true"
        android:layout_height="25dp"
        android:layout_marginHorizontal="10dp"
        android:src="@drawable/search_drawable"/>

    <LinearLayout
        android:id="@+id/clickToLoadUrl"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginHorizontal="10dp"
        android:layout_toStartOf="@+id/openUrl"
        android:layout_toEndOf="@+id/getFromResultImage"
        android:orientation="vertical">

        <TextView
            android:id="@+id/titleSearchSuggestion"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Facebook Title"
            android:lines="1"
            android:maxLines="1"
            android:textColor="@color/white"
            android:textSize="18sp"
            android:textStyle="bold" />

        <TextView
            android:maxLines="1"
            android:lines="1"
            android:id="@+id/urlSearchSuggestion"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="https://www.facebook.com"
            android:textColor="@color/white"
            android:textSize="15sp" />
    </LinearLayout>

    <ImageView
        android:id="@+id/openUrl"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true"
        android:layout_marginHorizontal="10dp"
        android:src="@drawable/arrow_vertical_drawable" />
</RelativeLayout>
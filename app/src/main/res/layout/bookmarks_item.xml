<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/mainBodybookmarkItem"
    style="@style/matchWrap"
    android:background="@color/transparent"
    android:padding="5dp">

    <CheckBox
        android:id="@+id/checkBookmark"
        style="@style/wrap"
        android:layout_centerVertical="true"
        android:visibility="gone" />

    <ImageView
        android:id="@+id/logoBookmark"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_centerVertical="true"
        android:layout_margin="5dp"
        android:layout_toEndOf="@+id/checkBookmark"
        android:background="@drawable/web_drawable"
        android:backgroundTint="#6BFFFFFF" />

    <TextView
        android:id="@+id/titleBookmark"
        style="@style/wrap"
        android:layout_marginHorizontal="20dp"
        android:layout_toStartOf="@+id/menuItemBookmark"
        android:layout_toEndOf="@+id/logoBookmark"
        android:layout_toRightOf="@+id/logoHistory"
        android:lines="1"
        android:maxLines="1"
        android:text="Title"
        android:textColor="@color/white"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/urlBookmark"
        android:layout_width="wrap_content"
        android:layout_height="14dp"
        android:layout_below="@+id/titleBookmark"
        android:layout_marginHorizontal="10dp"
        android:layout_toStartOf="@+id/menuItemBookmark"
        android:layout_toEndOf="@+id/logoBookmark"
        android:lines="1"
        android:maxLines="1"
        android:text="url"
        android:textColor="#B2FFFFFF"
        android:textSize="10sp" />


    <ImageView
        android:id="@+id/menuItemBookmark"
        android:layout_width="40dp"
        android:layout_height="50dp"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true"
        android:paddingHorizontal="12dp"
        android:src="@drawable/menuicon_top_drawable" />


</RelativeLayout>